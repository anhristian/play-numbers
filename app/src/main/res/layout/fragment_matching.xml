<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/holo_blue_light"
  tools:context=".controller.MatchingFragment">

  <!--  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="8dp"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>-->

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/vertical_guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"/>

  <ImageButton
    android:id="@+id/number_one"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/number_1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/number_two"
    app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/number_two"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/number_2"
    app:layout_constraintTop_toBottomOf="@id/number_one"
    app:layout_constraintBottom_toTopOf="@id/number_three"
    app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/number_three"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/number_3"
    app:layout_constraintTop_toBottomOf="@id/number_two"
    app:layout_constraintBottom_toTopOf="@id/number_four"
    app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/number_four"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/number_4"
    app:layout_constraintBottom_toTopOf="@id/number_five"
    app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/number_three"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/number_five"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/number_5"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/number_four"
    app:layout_constraintVertical_chainStyle="packed"
    />



  <ImageButton
    android:id="@+id/two_animals"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/animals_2"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/four_animals"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/four_animals"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/animals_4"
    app:layout_constraintTop_toBottomOf="@id/two_animals"
    app:layout_constraintBottom_toTopOf="@id/three_animals"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/three_animals"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/animals_3"
    app:layout_constraintTop_toBottomOf="@id/four_animals"
    app:layout_constraintBottom_toTopOf="@id/five_animals"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/five_animals"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/animals_5"
    app:layout_constraintTop_toBottomOf="@id/four_animals"
    app:layout_constraintBottom_toTopOf="@id/one_animal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintVertical_chainStyle="packed"
    />

  <ImageButton
    android:id="@+id/one_animal"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:src="@drawable/animal_1"
    app:layout_constraintTop_toBottomOf="@id/five_animals"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/vertical_guideline"
    app:layout_constraintVertical_chainStyle="packed"
    />










</androidx.constraintlayout.widget.ConstraintLayout>